<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/vendor_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/aldrich"
                android:hint="Vendor Name"
                android:textColorHint="@color/CardTextColor"
                android:textSize="30sp"
                android:textColor="@color/CardTextColor"
                android:textStyle="bold"/>

            <View
                android:id="@+id/delivery_status"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/available"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/vendor_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/cagliostro"
                android:hint="Type"
                android:textColorHint="@color/CardTextColor"
                android:textColor="@color/CardTextColor"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/vendor_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/cagliostro"
                android:hint="@string/address_text"
                android:textColorHint="@color/CardTextColor"
                android:textColor="@color/CardTextColor"
                android:textSize="20sp"
                android:maxLines="1"/>

        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>